# Database Configuration
DATABASE_NAME=ai_agent_db
DATABASE_USER=aiagent
DATABASE_PASSWORD=your_secure_database_password_here

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Configuration
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production_minimum_32_characters

# Encryption
ENCRYPTION_KEY=your_encryption_key_32_chars_min

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here
GRAFANA_SECRET_KEY=your_grafana_secret_key_here

# Application Configuration
LOG_LEVEL=INFO
DEBUG=false

# SSL Configuration (if using HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM

# Monitoring
PROMETHEUS_RETENTION=90d
GRAFANA_ANONYMOUS_ACCESS=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
DEFAULT_RATE_LIMIT_PER_MINUTE=100
DEFAULT_RATE_LIMIT_PER_HOUR=1000

# External Services (optional)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password